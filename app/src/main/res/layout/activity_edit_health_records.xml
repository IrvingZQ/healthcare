<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientActivity.EditHealthRecordsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_health_records_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/edit_health_records_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:text="返回"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="更新档案"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/edit_health_records_tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="保存"
            android:textSize="15sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/edit_health_records_top_bar"
        android:background="@color/text"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/hint_health_records_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_health_records_top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="2dp"
        android:padding="20sp"
        android:text="生活习惯"/>

    <EditText
        android:id="@+id/edit_health_records_et_habit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:padding="10dp"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/hint_health_records_habit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#EFEDED"
        android:textSize="16sp"
        android:text="在此处添加"/>

    <TextView
        android:id="@+id/hint_health_records_family_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_health_records_et_habit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="20sp"
        android:text="家族病史"/>

    <EditText
        android:id="@+id/edit_health_records_et_family_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:padding="10dp"
        android:gravity="top"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/hint_health_records_family_history"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#EFEDED"
        android:text="在此处添加"/>

</androidx.constraintlayout.widget.ConstraintLayout>