<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhengzhiqiang.healthmanagement.CustomView.RoundImageView
        android:id="@+id/comments_riv_item_head_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/comments_riv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/comments_riv_item_head_image"
        app:layout_constraintLeft_toRightOf="@id/comments_riv_item_head_image"
        android:layout_marginLeft="5dp"
        android:text="用户昵称" />

    <TextView
        android:id="@+id/comments_riv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/comments_riv_item_name"
        app:layout_constraintLeft_toRightOf="@id/comments_riv_item_head_image"
        android:text="评论内容" />

    <TextView
        android:id="@+id/comments_riv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comments_riv_item_content"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:text="2020-4-5 22:00"/>

</androidx.constraintlayout.widget.ConstraintLayout>