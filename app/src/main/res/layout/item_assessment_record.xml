<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/round_corner">

    <TextView
        android:id="@+id/assessment_record_item_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/assessment_record_item_tv_date"
        android:padding="5dp"
        android:text="评估类型"/>

    <TextView
        android:id="@+id/assessment_record_item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/assessment_record_item_tv_type"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="5dp"
        android:text="评估时间"/>

    <TextView
        android:id="@+id/hint_assessment_item_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/assessment_record_item_tv_type"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"
        android:text="评估分析结果:"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/assessment_record_item_tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hint_assessment_item_result"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
